<MudDialog>
    <DialogContent>
        <h5>@Content</h5>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => MudDialog.Cancel())">Close</MudButton>
        <MudButton  Variant="Variant.Filled" Color="Color.Info" @bind-Disabled="_isHidden" OnClick="Save">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Content { get; set; }

    private bool _isHidden;

    protected override async void OnInitialized()
    {
        _isHidden = true;
        await Task.Delay(250);
        _isHidden = false;
        StateHasChanged();
    }

    private void Save()
    {
        MudDialog.Close(true);
    }
}