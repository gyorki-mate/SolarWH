@page "/storage"
@inject ISnackbar Snackbar
@inject IDialogService DialogService

<MudTabs Elevation="4" Rounded="true" Color="@Color.Dark" Class="mt-3" @bind-ActivePanelIndex="_activeTabIndex">
    @for (int s = 0; s < 8; s++)
    {
        var shelfText = "Shelf " + (s + 1).ToString();
        <MudTabPanel Text="@shelfText">
            <MudGrid Class="mt-3">
                @for (int r = 0; r < 6; r++)
                {
                    @for (int c = 0; c < 6; c++)
                    {
                        var containerID = ((r * 6 + (c + 1)) + (36 * _activeTabIndex));
                        var containerText = "Container " + containerID.ToString();
                        <MudItem xs="2">
                            <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
                                <MudText>@containerText</MudText>
                                <MudIconButton Icon="@Icons.Material.Filled.Add" Variant="Variant.Outlined" Color="Color.Success" Size="Size.Small" Class="ml-3"/>
                            </MudPaper>
                        </MudItem>
                    }
                }
            </MudGrid>
        </MudTabPanel>
    }
</MudTabs>

@code {
    private int _activeTabIndex;
}

